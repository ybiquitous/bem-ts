{
  "name": "bem-ts",
  "version": "0.9.0",
  "description": "BEM class names generator for TypeScript",
  "author": "Masafumi Koba <ybiquitous@gmail.com>",
  "repository": "ybiquitous/bem-ts",
  "keywords": [
    "BEM",
    "classname",
    "utility",
    "TypeScript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/bem-ts.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!*test*"
  ],
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:cjs": "tsc",
    "build:esm": "tsc --module es2015 --outDir dist/module/ && mv dist/module/index.js dist/bem-ts.js && rimraf dist/module/",
    "postbuild:esm": "cd dist && uglifyjs bem-ts.js -o bem-ts.min.js --source-map url=bem-ts.min.js.map",
    "test": "nyc tape -r ts-node/register test.ts",
    "test:coverage": "nyc report --reporter=html && opn coverage/index.html",
    "test:coverage:report": "nyc report --reporter=lcov && npx codecov",
    "lint:ts": "tslint -p tsconfig.test.json",
    "lint:ts:fix": "prettier --write \"**/*.ts\" && npm run lint:ts -- --fix",
    "lint:md": "markdownlint --ignore node_modules --ignore CHANGELOG.md \"**/*.md\"",
    "lint:md:fix": "prettier --write \"**/*.md\"",
    "lint": "npm-run-all --print-label --parallel lint:*",
    "release": "standard-version --sign",
    "release:dry-run": "npm run release -- --dry-run"
  },
  "devDependencies": {
    "@types/tape": "4.2.32",
    "nyc": "13.1.0",
    "opn-cli": "4.0.0",
    "rimraf": "2.6.2",
    "tape": "4.9.1",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.16.0",
    "typescript": "3.1.6",
    "uglify-es": "3.3.9",
    "ybiq": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "tslint --fix",
        "git add"
      ],
      "*.md": [
        "markdownlint"
      ],
      "*.{html,json,md,ts,yaml,yml}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "CHANGELOG.md"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "test.ts"
    ]
  }
}
