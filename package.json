{
  "name": "bem-ts",
  "version": "0.11.0",
  "description": "BEM class names generator for TypeScript",
  "author": "Masafumi Koba <ybiquitous@gmail.com>",
  "repository": "ybiquitous/bem-ts",
  "keywords": [
    "BEM",
    "classname",
    "utility",
    "TypeScript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/bem-ts.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!*test*"
  ],
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:cjs": "tsc",
    "build:esm": "tsc --module es2015 --outDir dist/module/ && mv dist/module/index.js dist/bem-ts.js && rimraf dist/module/",
    "postbuild:esm": "cd dist && terser bem-ts.js -o bem-ts.min.js --source-map url=bem-ts.min.js.map",
    "test": "nyc tape -r ts-node/register test.ts",
    "test:coverage": "nyc report --reporter=html && opn coverage/index.html",
    "test:coverage:report": "nyc report --reporter=lcov && npx codecov",
    "lint:ts": "eslint --ignore-path .gitignore --ext .ts .",
    "lint:ts:fix": "prettier --write \"**/*.ts\" && npm run lint:ts -- --fix",
    "lint:md": "remark . --frail",
    "lint:md:fix": "remark . --output",
    "lint": "npm-run-all --print-label --parallel lint:*",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{css,html,js,json,jsx,md,mjs,scss,ts,tsx,yaml,yml}\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write",
    "format": "npm-run-all --print-label --parallel lint:*:fix prettier:write",
    "release": "standard-version --sign",
    "release:dry-run": "npm run release -- --dry-run"
  },
  "devDependencies": {
    "@types/tape": "^4.2.33",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "nyc": "^14.1.1",
    "opn-cli": "^5.0.0",
    "rimraf": "^2.6.3",
    "tape": "^4.10.1",
    "terser": "^3.17.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "ybiq": "^7.3.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "eslint --ext .ts --fix",
        "git add"
      ],
      "*.md": [
        "remark --output --",
        "git add"
      ],
      "*.{css,html,js,json,jsx,md,mjs,scss,ts,tsx,yaml,yml}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "CHANGELOG.md"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "extension": [
      ".ts"
    ],
    "exclude": [
      "test.ts"
    ]
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-markdown-style-guide",
      "remark-preset-lint-recommended",
      "remark-lint-first-heading-level",
      "remark-lint-no-tabs",
      [
        "remark-lint-code-block-style",
        false
      ],
      [
        "remark-lint-emphasis-marker",
        false
      ],
      [
        "remark-lint-list-item-indent",
        false
      ],
      [
        "remark-lint-list-item-spacing",
        false
      ],
      [
        "remark-lint-maximum-line-length",
        false
      ],
      [
        "remark-lint-ordered-list-marker-value",
        "ordered"
      ],
      "remark-validate-links"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "deps",
          "deps-dev",
          "readme",
          "demo",
          "release",
          "travis",
          "sideci",
          "coverage",
          "security",
          "lint"
        ]
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "error",
        {
          "allowExpressions": true
        }
      ]
    }
  }
}
