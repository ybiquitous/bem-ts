{
  "name": "bem-ts",
  "version": "0.6.1",
  "description": "BEM class names generator for TypeScript",
  "author": "Masafumi Koba <ybiquitous@gmail.com>",
  "repository": "ybiquitous/bem-ts",
  "keywords": [
    "BEM",
    "classname",
    "TypeScript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!*test*"
  ],
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "tsc",
    "build:watch": "npm run build -- --watch",
    "pretest": "npm run build",
    "test": "jest --coverage",
    "test:watch-private": "jest --watch",
    "test:watch": "npm-run-all --parallel build:watch test:watch-private",
    "test:coverage": "npm test -- --coverageReporters=html",
    "lint:ts": "tslint --project .",
    "lint:ts:fix": "prettier --write \"**/*.ts\" && npm run lint:ts -- --fix",
    "lint:md": "markdownlint --ignore node_modules --ignore CHANGELOG.md \"**/*.md\"",
    "lint:md:fix": "prettier --write \"**/*.md\"",
    "lint": "npm-run-all --print-name --print-label --parallel lint:*",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "precommit": "lint-staged",
    "release": "standard-version",
    "release:dry-run": "npm run release -- --dry-run"
  },
  "devDependencies": {
    "@types/jest": "23.1.4",
    "jest": "23.2.0",
    "rimraf": "2.6.2",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "typescript": "2.9.2",
    "ybiq": "3.3.0"
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ],
      "*.md": [
        "prettier --write",
        "markdownlint",
        "git add"
      ]
    },
    "ignore": [
      "CHANGELOG.md"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
